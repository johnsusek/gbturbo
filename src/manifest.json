{
  "name": "Giant Bomb Turbo",
  "short_name": "Giant Bomb Turbo",
  "description": "Customize Giant Bomb (2018 redesign) to your hearts content.",
  "version": "0.1",
  "author": "John Susek",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "gbturbo",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["inject/lib/sortable.js", "inject/ui.js"],
      "css": ["inject/ui.css"],
      "matches": ["https://www.giantbomb.com/"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["icons/*"],
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gbturbo@johnsolo.net"
    }
  }
}
